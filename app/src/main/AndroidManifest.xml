<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.nanami.android.blackhistory">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:label="@string/app_name"
        android:icon="@drawable/ic_launcher"
        android:theme="@style/Theme.AppCompat"
        android:name=".AppController">

        <activity
            android:name=".activity.TwitterOAuthActivity"
            android:launchMode="singleTask" >
            <intent-filter>
                <action android:name="android.intent.action.VIEW"/>
                <category android:name="android.intent.category.DEFAULT" />
                <category android:name="android.intent.category.BROWSABLE" />
                <data android:host="twitter" android:scheme="gabu" />
            </intent-filter>
        </activity>

        <activity android:name=".activity.TweetActivity"
            android:windowSoftInputMode="adjustResize" />

        <activity android:name=".activity.MainStreamActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN"/>
                <category android:name="android.intent.category.LAUNCHER"/>
            </intent-filter>
        </activity>

        <activity android:name=".activity.TweetExpansionTweetActivity"
            android:uiOptions="splitActionBarWhenNarrow" />

        <service android:name=".event.TwitterStreamService" />

    </application>

</manifest>
