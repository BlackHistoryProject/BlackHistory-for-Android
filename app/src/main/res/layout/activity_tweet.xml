<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#000"
    android:padding="8dp"
    >

    <TextView
        android:id="@+id/tweet_taskbar"
        android:layout_width="fill_parent"
        android:layout_height="30dp"
        android:textColor="#FFF"
        android:text="Tweet"
        android:textSize="15dp"
        android:gravity="center"
        >


    </TextView>

    <EditText
        android:id="@+id/input_text"
        android:layout_width="match_parent"
        android:layout_height="140dp"
        android:background="@drawable/back_tweetarea"
        android:textColor="#D3D3D3"
        android:padding="5dp"
        android:layout_marginBottom="8dp"
        android:ems="10"
        android:layout_marginTop="10dp"
        android:layout_below="@+id/tweet_taskbar"
        android:gravity="left|top"
        android:inputType="textMultiLine" >

        <requestFocus />
    </EditText>

    <RelativeLayout
        android:id="@+id/otherbutton1"
        android:layout_width="fill_parent"
        android:layout_height="50dp"
        android:layout_marginTop="5dp"
        android:layout_centerInParent="true"
        android:layout_below="@id/input_text">

        <ImageButton
            android:id="@+id/tweet_other_menu"
            android:layout_width="50dp"
            android:layout_height="fill_parent"
            android:background="@android:drawable/ic_menu_more"
        />

        <TextView
            android:id="@+id/tweet_count"
            android:layout_width="50dp"
            android:layout_height="fill_parent"
            android:text="140"
            android:gravity="center"
            android:textColor="#FFF"
            android:layout_toRightOf="@+id/tweet_other_menu"
        />

        <FrameLayout
            android:id="@+id/tweet_button_layout"
            android:layout_width="100dp"
            android:layout_height="fill_parent"
            android:layout_alignParentRight="true"
            >

            <Button
                android:id="@+id/tweet_button"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:paddingLeft="10dp"
                android:text="Send"
                android:textColor="#FFF"
            />

        </FrameLayout>

        <ImageButton
            android:id="@+id/teet_view_image"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_toRightOf="@+id/tweet_count"
            android:layout_marginLeft="80dp"
            />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/otherbutton2"
        android:layout_width="fill_parent"
        android:layout_height="50dp"
        android:layout_marginTop="1dp"
        android:layout_centerInParent="true"
        android:layout_below="@id/otherbutton1">

            <FrameLayout
                android:id="@+id/tweet_picture_button"
                android:layout_width="270dp"
                android:layout_height="fill_parent"
                android:layout_alignParentRight="false"
                >
                <ImageView
                     android:layout_width="30dp"
                     android:layout_height="30dp"
                     android:src="@drawable/iconcompose_gallery"
                     android:layout_marginLeft="15dp"
                     android:layout_marginTop="10dp"
                />
                <Button
                    android:id="@+id/tweet_picture"
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:paddingLeft="40dp"
                    android:textColor="#FFF"
                    android:text="Add Picture"
                />
            </FrameLayout>

            <FrameLayout
            android:id="@+id/tweet_camera_button"
            android:layout_width="70dp"
            android:layout_height="fill_parent"
            android:layout_alignParentRight="true"
            >
                <ImageView
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:src="@android:drawable/ic_menu_camera"
                    android:layout_marginLeft="20dp"
                    android:layout_marginTop="10dp"
                />
                <Button
                    android:id="@+id/tweet_camera"
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:paddingLeft="50dp"
                    android:textColor="#FFF"
                />

        </FrameLayout>
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/otherbutton3"
        android:layout_width="fill_parent"
        android:layout_height="50dp"
        android:layout_marginTop="1dp"
        android:layout_centerInParent="true"
        android:layout_below="@+id/otherbutton2">

        <FrameLayout
            android:id="@+id/tweet_location_button"
            android:layout_width="270dp"
            android:layout_height="fill_parent"
            android:layout_alignParentRight="false"
            >
            <ImageView
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:src="@drawable/iconcompose_location"
                android:layout_marginLeft="15dp"
                android:layout_marginTop="10dp"
                />
            <Button
                android:id="@+id/tweet_location"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:paddingLeft="40dp"
                android:textColor="#FFF"
                android:text="Location"
                />
        </FrameLayout>

        <FrameLayout
            android:id="@+id/tweet_gps_button"
            android:layout_width="70dp"
            android:layout_height="fill_parent"
            android:layout_alignParentRight="true"
            >
            <ImageView
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:src="@android:drawable/ic_menu_compass"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="10dp"
                />
            <Button
                android:id="@+id/tweet_gps"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:paddingLeft="50dp"
                android:textColor="#FFF"
                />

        </FrameLayout>
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/otherbutton4"
        android:layout_width="fill_parent"
        android:layout_height="50dp"
        android:layout_marginTop="1dp"
        android:layout_centerInParent="true"
        android:layout_below="@id/otherbutton3">

        <FrameLayout
            android:id="@+id/tweet_Account_button"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_alignParentRight="false"
            >
            <ImageView
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:src="@drawable/iconcompose_addcontact"
                android:layout_marginLeft="15dp"
                android:layout_marginTop="10dp"
                />
            <Button
                android:id="@+id/tweet_Account"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:paddingLeft="30dp"
                android:textColor="#FFF"
                android:text="Add Account"
                />
        </FrameLayout>

    </RelativeLayout>

</RelativeLayout>